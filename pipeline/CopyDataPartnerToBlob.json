{
	"name": "CopyDataPartnerToBlob",
	"properties": {
		"activities": [
			{
				"name": "PersonSQLPartnerToBlob",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Validation SQL Data",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource"
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "AzureSqlTablePerson",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ParquetSource",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "SendEmailFail",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "PersonSQLPartnerToBlob",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "http://www.microsoft.com",
					"method": "POST",
					"body": "xpto"
				}
			},
			{
				"name": "Wait5Seconds",
				"type": "Wait",
				"dependsOn": [
					{
						"activity": "PersonSQLPartnerToBlob",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"waitTimeInSeconds": 5
				}
			},
			{
				"name": "Validation SQL Data",
				"type": "Validation",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "AzureSqlTablePerson",
						"type": "DatasetReference"
					},
					"timeout": "7.00:00:00",
					"sleep": 10
				}
			}
		],
		"annotations": []
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}